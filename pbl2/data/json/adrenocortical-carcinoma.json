{
  "disease_name": "Adrenocortical carcinoma",
  "synonyms": [
    "Adrenal cortical carcinoma",
    "Adrenal cortex carcinoma",
    "ACC"
  ],
  "summary": "An aggressive malignancy arising from the adrenal cortex that often produces excess steroid hormones (functional tumors), leading to Cushing syndrome, hyperaldosteronism (Conn), virilization, or feminization; frequently presents at an advanced stage and has poor overall prognosis.",
  "causes": [
    "TP53 inactivation (Li–Fraumeni syndrome)",
    "CTNNB1 activation (Wnt/β-catenin pathway)",
    "MEN1 mutation",
    "PRKAR1A mutation",
    "RPL22 mutation",
    "DAXX mutation",
    "TERT amplification",
    "ZNRF3 deletion",
    "CDKN2A deletion",
    "IGF2 overexpression",
    "H19 downregulation",
    "CDKN1C (p57KIP2) loss",
    "MYC overexpression"
  ],
  "risk_factors": [
    "Li–Fraumeni syndrome",
    "Carney complex",
    "Primary pigmented nodular adrenocortical disease",
    "Primary bilateral macronodular adrenal hyperplasia",
    "Childhood (<5 years)",
    "Adults aged 30–40"
  ],
  "symptoms": [
    "Cushing syndrome",
    "Conn syndrome (hyperaldosteronism)",
    "Virilization",
    "Feminization",
    "Abdominal pain",
    "Flank pain",
    "Varicocele",
    "Renal vein thrombosis",
    "Incidental adrenal mass"
  ],
  "diagnosis": [
    "Hormone testing (cortisol, aldosterone, androgens, estrogens, renin, potassium, glucose)",
    "CT scan (heterogeneous mass, necrosis, calcifications, peripheral enhancement)",
    "MRI (low T1, high T2, heterogeneous enhancement)",
    "FDG-PET (staging; sensitive, not specific)",
    "11C-metomidate PET (adrenocortical specificity)",
    "Surgical pathology with Weiss criteria"
  ],
  "treatments": [
    "Complete surgical excision (adrenalectomy)",
    "Mitotane",
    "EDP + mitotane (etoposide, doxorubicin, cisplatin + mitotane)",
    "Streptozotocin + mitotane",
    "Radiation therapy (palliation)",
    "Radiofrequency ablation (palliation)"
  ],
