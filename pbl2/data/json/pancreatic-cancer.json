{
  "disease_name": "Pancreatic cancer",
  "synonyms": [
    "Pancreatic carcinoma",
    "Pancreatic ductal adenocarcinoma",
    "PDAC"
  ],
  "summary": "A malignant tumor arising in the pancreas, most commonly pancreatic ductal adenocarcinoma (PDAC). It often presents late with obstructive jaundice, weight loss, and abdominal/back pain. Prognosis is poor overall, though outcomes improve with complete surgical resection and modern combination chemotherapy.",
  "causes": [
    "KRAS activation",
    "TP53 loss",
    "CDKN2A (p16) inactivation",
    "SMAD4 (DPC4) loss",
    "Chronic pancreatic inflammation (chronic pancreatitis)",
    "Hereditary predisposition (BRCA2, PALB2, STK11, PRSS1, Lynch genes, ATM)"
  ],
  "risk_factors": [
    "Smoking",
    "Older age",
    "Male sex",
    "Family history of pancreatic cancer",
    "Chronic pancreatitis",
    "Diabetes mellitus (including new-onset)",
    "Obesity",
    "Alcohol use (via pancreatitis)",
    "Hereditary syndromes (BRCA1/2, PALB2, STK11/Peutz–Jeghers, CDKN2A/FAMMM, Lynch, PRSS1)"
  ],
  "symptoms": [
    "Painless jaundice",
    "Dark urine",
    "Pale stools (acholic)",
    "Pruritus",
    "Epigastric pain radiating to back",
    "Weight loss",
    "Anorexia",
    "Nausea and vomiting",
    "New-onset diabetes",
    "Depression",
    "Trousseau syndrome (migratory thrombophlebitis)"
  ],
  "diagnosis": [
    "Pancreatic protocol CT scan",
    "MRI/MRCP",
    "Endoscopic ultrasound with FNA",
    "ERCP (biliary decompression; brushings)",
    "CA 19-9 blood test",
    "Liver function tests (bilirubin, ALP)",
    "Staging laparoscopy (selected)",
    "PET-CT (selected)"
  ],
  "treatments": [
    "Pancreaticoduodenectomy (Whipple procedure)",
    "Distal pancreatectomy ± splenectomy",
    "Total pancreatectomy (selected)",
    "Neoadjuvant chemotherapy (FOLFIRINOX; gemcitabine + nab-paclitaxel)",
    "Adjuvant chemotherapy (mFOLFIRINOX; gemcitabine ± capecitabine)",
    "Chemoradiation (selected)",
    "Biliary stent (palliation)",
    "Celiac plexus block (pain control)",
    "PARP inhibitors (BRCA1/2, PALB2)",
    "Immunotherapy (pembrolizumab for MSI‑H/dMMR)",
    "NTRK inhibitors (for NTRK fusions)"
  ],
