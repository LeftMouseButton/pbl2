{
  "disease_name": "Chronic myeloid leukemia",
  "synonyms": [
    "Chronic myelogenous leukemia",
    "CML",
    "Chronic granulocytic leukemia",
    "Philadelphia chromosome–positive CML"
  ],
  "summary": "A myeloproliferative neoplasm of hematopoietic stem cells driven by the BCR‑ABL1 fusion tyrosine kinase from t(9;22) (Philadelphia chromosome); typically presents in chronic phase and is highly responsive to tyrosine‑kinase inhibitors.",
  "causes": [
    "BCR-ABL1 fusion (t(9;22)(q34;q11.2))",
    "Constitutive tyrosine kinase activation",
    "Genomic instability with additional cytogenetic abnormalities in progression"
  ],
  "risk_factors": [
    "Older age",
    "Male sex",
    "Ionizing radiation exposure"
  ],
  "symptoms": [
    "Asymptomatic (incidental leukocytosis)",
    "Fatigue",
    "Weight loss",
    "Night sweats",
    "Fever",
    "Splenomegaly",
    "Early satiety",
    "Left upper quadrant pain",
    "Bone pain",
    "Easy bruising",
    "Petechiae"
  ],
  "diagnosis": [
    "Complete blood count (leukocytosis, basophilia)",
    "Bone marrow biopsy",
    "Cytogenetics (Philadelphia chromosome)",
    "FISH for BCR-ABL1",
    "RT-PCR for BCR-ABL1",
    "Phase classification (chronic, accelerated, blast crisis)"
  ],
  "treatments": [
    "Imatinib",
    "Dasatinib",
    "Nilotinib",
    "Bosutinib",
    "Ponatinib",
    "Asciminib",
    "Hydroxyurea (cytoreduction)",
    "Interferon-alpha",
    "Allogeneic stem cell transplant",
    "Leukapheresis",
    "Splenectomy",
    "Donor lymphocyte infusion"
  ],
  "related_genes": [
    "BCR-ABL1",
    "ABL1",
    "BCR"
  ],
  "subtypes": [
    {
